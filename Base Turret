
import java.awt.Graphics;

public abstract class Base extends Turret
{
    private final int radius;
    private final int reload;
    private int damage;
    private int timesUpgraded;
    private boolean canFire;
    
    public Base()
    {
        radius = 0;
        reload = 1000;
        damage = 200;
        timesUpgraded = 0;
        canFire = false;
    }
    
    public int getRadius()
    {
        return radius;
    }
    
    public int getDamage()
    {
        return damage;
    }
    
    public int getReloadSpeed()
    {
        return reload;
    }
    
    public void fire()
    {
        //fire
    }
    
    public void draw()
    {
        //draw
    }
    
    public void upgrade()
    {
        //add some ish
    }
}
